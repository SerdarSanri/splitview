{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": false,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "@bioinsights/common/*": [
        "./common/*"
      ],
      "@bioinsights/config/*": [
        "./config/*"
      ],
      "@bioinsights/core/*": [
        "./core/*"
      ],
      "@bioinsights/locales/*": [
        "./locales/*"
      ],
      "@bioinsights/media/*": [
        "./media/*"
      ],
      "@bioinsights/store/*": [
        "./store/*"
      ],
      "@bioinsights/styles/*": [
        "./styles/*"
      ],
      "@bioinsights/views/*": [
        "./views/*"
      ],
      "types/*": [
        "./types/*"
      ]
    },
    "types": [
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".idea",
    ".git"
  ],
  "include": [
    "src",
    "./src/types"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "types": [
    "@types/node",
    "@types/react",
    "@types/react-dom",
    "@storybook/react"
  ]
}
